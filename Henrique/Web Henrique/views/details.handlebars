<div class="container-fluid p-3">
    
<form method="post" action="/edit">
    <input type="text" name="id" value="{{item.id}}" hidden>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label"> Marca </label>
        <input type="text" name="marca" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{item.marca}}" >
    </div>
        <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label"> Modelo </label>
        <input type="text" name="modelo" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{item.modelo}}">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label"> Tamanho </label>
        <input type="number" name="tamanho" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{item.tamanho}}">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label"> Cor </label>
        <input type="text" name="cor" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{item.cor}}" >
    </div>


    <button type="submit" class="btn btn-primary" id="create-button"> EDITAR </button>
</form>

<form action="/delete/{{item.id}}" method="POST">
    <button type="submit" class="btn btn-danger fab"> <ion-icon name="trash-outline"></ion-icon> </button>
</form>

</div>


